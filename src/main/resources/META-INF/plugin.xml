<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
	<!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
	<id>com.zzk.JsonSchema</id>

	<!-- Public plugin name should be written in Title Case.
		 Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
	<name>BitByte</name>

	<!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
	<vendor email="zhangzikuan4513@foxmail.com">zzk</vendor>

	<!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
		 Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
		 Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
	<description>This is a plug-in integrating various small tools, which aims to simplify daily development and improve development efficiency through various small functions. Currently, the following functions have been provided, and other functions will be added later:

		1. Enhanced copy function. It can copy the fully qualified class name of the current class, JSON Schema information, enumeration class description information, and JSON string of the current class (generated using the default value) in one click.

		2. Simplify the creation of test classes. Support the rapid creation of test methods for the specified methods of the current class.

		3. String processing. Quickly convert the currently selected string, support case conversion and naming method conversion.

	</description>
	<version>2023.2.23</version>
	<!-- Product and plugin compatibility requirements.
		 Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
	<depends>com.intellij.modules.platform</depends>
	<depends>com.intellij.modules.lang</depends>
	<depends>com.intellij.modules.java</depends>
	<!-- Extension points defined by the plugin.
		 Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
	<extensions defaultExtensionNs="com.intellij">
		<applicationConfigurable parentId="tools" instance="com.zzk.idea.jsonschema.settings.AppSettingsConfigurable"
								 id="com.zzk.idea.jsonschema.settings.AppSettingsConfigurable"
								 displayName="Copy Json Schema"/>
		<applicationService serviceImplementation="com.zzk.idea.jsonschema.settings.AppSettingsState"/>
		<!--		<toolWindow id="Code Function Result" secondary="true" icon="AllIcons.General.Modified" anchor="right"-->
		<!--					factoryClass="com.zzk.idea.jsonschema.ui.MyToolWindowFactory"/>-->
		<codeInsight.lineMarkerProvider language="JAVA"
										implementationClass="com.zzk.idea.jsonschema.action.linemarker.CreateTestLineMarkerProvider"/>
		<intentionAction>
			<className>com.zzk.idea.jsonschema.action.text.SelectedText2UnderlineUpperCaseAction</className>
		</intentionAction>
		<intentionAction>
			<className>com.zzk.idea.jsonschema.action.text.SelectedText2UnderlineLowerCaseAction</className>
		</intentionAction>
		<intentionAction>
			<className>com.zzk.idea.jsonschema.action.text.SelectedText2LowerCaseAction</className>
		</intentionAction>
		<intentionAction>
			<className>com.zzk.idea.jsonschema.action.text.SelectedText2UpperCaseAction</className>
		</intentionAction>
	</extensions>
	<actions>
		<action id="com.zzk.idea.jsonschema.action.copy.jsonschema.CopyJsonSchemaAction"
				class="com.zzk.idea.jsonschema.action.copy.jsonschema.CopyJsonSchemaAction"
				text="Copy Json Schema" description="Copy json schema">
			<add-to-group group-id="Copy.Paste.Special" anchor="first"/>
		</action>
		<action id="com.zzk.idea.jsonschema.action.copy.enumdesc.CopyEnumDescAction"
				class="com.zzk.idea.jsonschema.action.copy.enumdesc.CopyEnumDescAction"
				text="Copy Enum Description" description="Copy enum description">
			<add-to-group group-id="Copy.Paste.Special" anchor="after"
						  relative-to-action="com.zzk.idea.jsonschema.action.copy.jsonschema.CopyJsonSchemaAction"/>
		</action>
		<action id="com.zzk.idea.jsonschema.action.copy.classname.CopyClassNameAction"
				class="com.zzk.idea.jsonschema.action.copy.classname.CopyClassNameAction"
				text="Copy Class Name With Package" description="Copy class name with package">
			<add-to-group group-id="Copy.Paste.Special" anchor="after"
						  relative-to-action="com.zzk.idea.jsonschema.action.copy.enumdesc.CopyEnumDescAction"/>
		</action>
		<action id="com.zzk.idea.jsonschema.action.copy.json.CopyJsonWithDefaultValueAction"
				class="com.zzk.idea.jsonschema.action.copy.json.CopyJsonWithDefaultValueAction"
				text="Copy Json With Default Value" description="Copy json with default value">
			<add-to-group group-id="Copy.Paste.Special" anchor="after"
						  relative-to-action="com.zzk.idea.jsonschema.action.copy.classname.CopyClassNameAction"/>
		</action>

